@model DocsRepository.Models.AddDocumentViewModel

@{
    ViewBag.Title = "Add";
    Layout = "~/Views/Shared/_Layout.cshtml";
   
}


<h2>Новый документ</h2>


    <div class="row">
        <div class="col-md-6">
            @using (@Html.BeginForm("Add", "Documents",FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                @Html.AntiForgeryToken()
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                <div class="form-group">
                    @Html.LabelFor(m => m.Name, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.Name, new { @class = "form-control" })
                        @Html.ValidationMessageFor(m => m.Name, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    @Html.LabelFor(m => m.CreationDate, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">
                        @Html.TextBoxFor(m => m.CreationDate, new { @class = "form-control", id = "dateTimePicker" })
                        @Html.ValidationMessageFor(m => m.CreationDate, "", new { @class = "text-danger" })
                        

                    </div>
                   

                </div>

                <div class="form-group">
                    @Html.LabelFor(m => m.Tags, new { @class = "col-md-2 control-label" })
                    <div class="col-md-10">                    
                        <ul id="docsSearchLabels" class="form-control tag-it-size" data-dr-contol="tagit" data-dr-autocomplete="" data-dr-available-tags="@Url.Action("AvailableTags")"></ul>
                        @Html.ValidationMessageFor(m => m.Tags, "", new { @class = "text-danger" })
                    </div>
                </div>
                @*<div class="form-group">
                        @Html.LabelFor(m => m.Document, new { @class = "col-md-2 control-label" })
                        <div class="col-md-10">

                            @Html.ValidationMessageFor(m => m.CreationDate, "", new { @class = "text-danger" })
                        </div>
                    </div>*@
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        @Html.ActionLink("Отмена", "List", "Documents")
                        <input type="submit" value="Сохранить" class="btn btn-success" />

                    </div>
                </div>
            }
        </div>
        <div class="col-md-6">
            <div id="success" style="display:none">
                <span class="fa-stack fa-4x">
                    <i class="fa fa-circle-o fa-stack-2x"></i>
                    <i class="fa fa-check fa-stack-1x" style="top:70px"></i>
                </span>
            </div>
            <div id="loading" style="display:none">

                <span class="fa-stack fa-4x">
                    <i class="fa fa-cloud-upload fa-stack-2x"></i>
                    <i class="fa fa-file-word-o fa-stack-1x" style="top:70px"></i>
                </span>
            </div>
        </div>

    
</div>                          
